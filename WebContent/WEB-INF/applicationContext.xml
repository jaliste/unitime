                http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

        <context:component-scan base-package="org.unitime.timetable"/>
        
        <bean name="sessionContext" scope="request" class="org.unitime.timetable.spring.HttpSessionContext">
                <aop:scoped-proxy/>
        </bean>
