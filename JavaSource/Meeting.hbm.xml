<hibernate-mapping package="org.unitime.timetable.model">
	<class
		name="Meeting"
		abstract="false"
		table="MEETING">

		<cache include="non-lazy" usage="read-write"/>

		<id 
            name="uniqueId"
            column="UNIQUEID" 
            type="java.lang.Long">            
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
				<param name="sequence">PREF_GROUP_SEQ</param>
			</generator>
            
        </id>
        
		<many-to-one 
			name="event" 
			class="Event" 
			column="EVENT_ID" 
			foreign-key="fk_meeting_event"
			not-null="true"
		/>

		<property
			name="meetingDate"
			column="MEETING_DATE"
			type="java.sql.Timestamp"
			not-null="true"
		/>
		
 		<property
			name="startPeriod"
			column="START_PERIOD"
			type="java.lang.Integer"
			not-null="true"
			length="10"
		/>

 		<property
			name="startOffset"
			column="START_OFFSET"
			type="java.lang.Integer"
			not-null="false"
			length="10"
		/>

		<property
			name="stopPeriod"
			column="STOP_PERIOD"
			type="java.lang.Integer"
			not-null="true"
			length="10"
		/>

 		<property
			name="stopOffset"
			column="STOP_OFFSET"
			type="java.lang.Integer"
			not-null="false"
			length="10"
		/>
		
 		<property
			name="locationPermanentId"
			column="location_perm_id"
			type="java.lang.Long"
			not-null="false"
			length="20"
		/>
		
		<property
			name="classCanOverride"
			column="CLASS_CAN_OVERRIDE"
			type="java.lang.Boolean"
			not-null="true"
		/>

		<property
			name="approvedDate"
			column="APPROVED_DATE"
			type="java.sql.Timestamp"
			not-null="false"
		/>
			
		
	</class>
</hibernate-mapping>