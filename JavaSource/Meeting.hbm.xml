<hibernate-mapping package="org.unitime.timetable.model">
    <class
        name="Meeting"
        abstract="false"
        table="meeting">
        <cache include="non-lazy" usage="read-write"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">pref_group_seq</param>
            </generator>
        </id>

        <many-to-one
            name="event"
            class="Event"
            column="event_id"
            foreign-key="fk_meeting_event"
            not-null="true"/>

        <property
            name="meetingDate"
            column="meeting_date"
            type="java.sql.Timestamp"
            not-null="true"/>

        <property
            name="startPeriod"
            column="start_period"
            type="java.lang.Integer"
            not-null="true"
            length="10"/>

        <property
            name="startOffset"
            column="start_offset"
            type="java.lang.Integer"
            not-null="false"
            length="10"/>

        <property
            name="stopPeriod"
            column="stop_period"
            type="java.lang.Integer"
            not-null="true"
            length="10"/>

        <property
            name="stopOffset"
            column="stop_offset"
            type="java.lang.Integer"
            not-null="false"
            length="10"/>

        <property
            name="locationPermanentId"
            column="location_perm_id"
            type="java.lang.Long"
            not-null="false"
            length="20"/>

        <property
            name="classCanOverride"
            column="class_can_override"
            type="java.lang.Boolean"
            not-null="true"/>

        <property
            name="approvedDate"
            column="approved_date"
            type="java.sql.Timestamp"
            not-null="false"/>

    </class>

</hibernate-mapping>
