<hibernate-mapping package="org.unitime.timetable.model">
	<class
		name="Designator"
		table="DESIGNATOR">
		
		<cache include="non-lazy" usage="read-write"/>

        <id
            name="uniqueId"
            column="UNIQUEID"
            type="java.lang.Long"
			length="20"
        >
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">DESIGNATOR_SEQ</param>
            </generator>
        </id>
				
		<property
			name="code"
			column="CODE"
			type="java.lang.String"
			not-null="true"
			length="3"
		/>
		
		<many-to-one 
			name="subjectArea" 
			class="SubjectArea" 
			column="SUBJECT_AREA_ID" 
			not-null="true"
			insert="true"
			update="true"
			foreign-key="FK_DESIGNATOR_SUBJ_AREA"
		/>

		<many-to-one 
			name="instructor" 
			class="DepartmentalInstructor"
			column="INSTRUCTOR_ID" 
			not-null="true"
			insert="true"
			update="true"
			foreign-key="FK_DESIGNATOR_INSTRUCTOR"
		/>	
				
	</class>	
</hibernate-mapping>