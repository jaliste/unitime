<hibernate-mapping package="org.unitime.timetable.model">

	<class
		name="Roles"
		table="ROLES"
		>

		<meta attribute="class-description">
			This class represents the roles other than
			Schedule Deputy. Examples of other roles are
			LLR Manager, Lab Manager, Administrator.
			@author Heston Fernandes
		</meta>

 		<cache include="non-lazy" usage="nonstrict-read-write"/>

		<id
			name="roleId"
			column="ROLE_ID"
			type="java.lang.Long"
		>
			<generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
				<param name="sequence">ROLE_SEQ</param>
			</generator>
		</id>

		<property
			name="reference"
			column="REFERENCE"
			type="string"
			length="20"
			not-null="true"
			unique="true"
		/>

		<property
			name="abbv"
			column="ABBV"
			type="string"
			length="40"
			not-null="true"
			unique="true"
		/>
		
	</class>
</hibernate-mapping>
