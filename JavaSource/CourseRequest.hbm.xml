<hibernate-mapping package="org.unitime.timetable.model">

	<class name="CourseRequest" table="COURSE_REQUEST">
		
 		<cache include="non-lazy" usage="nonstrict-read-write"/>
 		
        <id name="uniqueId" column="UNIQUEID" type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">PREF_GROUP_SEQ</param>
            </generator>
        </id>
        
		<many-to-one 
			name="courseDemand" 
			class="CourseDemand" 
			column="COURSE_DEMAND_ID" 
			foreign-key="FK_COURSE_REQUEST_DEMAND"
			not-null="true"
		/>
		
		<many-to-one 
			name="courseOffering" 
			class="CourseOffering" 
			column="COURSE_OFFERING_ID" 
			foreign-key="FK_COURSE_REQUEST_OFFERING"
			not-null="true"
		/>

		<property
			name="order"
			column="ORD"
			type="java.lang.Integer"
			not-null="true"
			length="10"
		/>

		<property
			name="allowOverlap"
			column="ALLOW_OVERLAP"
			type="java.lang.Boolean"
			not-null="true"
		/>

		<property
			name="credit"
			column="CREDIT"
			type="java.lang.Integer"
			not-null="true"
			length="10"
		/>

		<set name="classEnrollments" table="STUDENT_CLASS_ENRL" inverse="true" cascade="all" lazy="true">
	 		<cache include="non-lazy" usage="read-write"/>
			<key column="COURSE_REQUEST_ID" foreign-key="FK_STUDENT_CLASS_ENRL_REQUEST"/>
			<one-to-many class="StudentClassEnrollment"/>
		</set>

		<set name="courseRequestOptions" table="COURSE_REQUEST_OPTION" inverse="true" cascade="all">
	 		<cache include="non-lazy" usage="read-write"/>
			<key column="COURSE_REQUEST_ID" foreign-key="FK_COURSE_REQUEST_OPTIONS_REQ"/>
			<one-to-many class="CourseRequestOption"/>
		</set>

		<set name="classWaitLists" table="CLASS_WAITLIST" inverse="true" cascade="all">
	 		<cache include="non-lazy" usage="read-write"/>
			<key column="COURSE_REQUEST_ID" foreign-key="FK_CLASS_WAITLIST_REQUEST"/>
			<one-to-many class="ClassWaitList"/>
		</set>

    </class>

</hibernate-mapping>