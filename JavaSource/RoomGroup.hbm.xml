<hibernate-mapping package="org.unitime.timetable.model">
	<class
		name="RoomGroup"
		table="ROOM_GROUP">
		
 		<cache include="non-lazy" usage="nonstrict-read-write"/>

        <id
            name="uniqueId"
            column="UNIQUEID"
            type="java.lang.Long"
        >
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">ROOM_GROUP_SEQ</param>
            </generator>
        </id>
					
		<many-to-one 
			name="department" 
			class="Department" 
			column="DEPARTMENT_ID" 
			not-null="false"
			lazy="false"
		/>

		<property name="name"
		    column="NAME"
			type="java.lang.String"
			not-null="true"
			length="20"
			/>
			
		<property
			name="description"
			column="DESCRIPTION"
			type="java.lang.String"
			not-null="false"
			length="200"
		/>

		<property
			name="global"
			column="GLOBAL"
			type="java.lang.Boolean"
			not-null="true"
		/>
		
		<property
			name="defaultGroup"
			column="DEFAULT_GROUP"
			type="java.lang.Boolean"
			not-null="true"
		/>
				
		<set name="rooms"
			table="ROOM_GROUP_ROOM"
			inverse="true" >
	 		<cache include="non-lazy" usage="nonstrict-read-write"/>	 		
			<key column="ROOM_GROUP_ID"/>			
			<many-to-many 
				class="Location" 
				column="ROOM_ID" 
				/>
		</set>	
		
		<many-to-one 
			name="session" 
			class="Session" 
			column="SESSION_ID" 
			foreign-key="FK_ROOM_SESSION"
			 />		
	</class>	
</hibernate-mapping>
