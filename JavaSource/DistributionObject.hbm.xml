<hibernate-mapping package="org.unitime.timetable.model">
	<class
		name="DistributionObject"
		table="DISTRIBUTION_OBJECT">

		<cache include="non-lazy" usage="read-write"/>

        <id
            name="uniqueId"
            column="UNIQUEID"
            type="java.lang.Long"
        >
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">DIST_OBJ_SEQ</param>
            </generator>
        </id>

		<many-to-one 
			name="distributionPref" 
			class="DistributionPref" 
			column="DIST_PREF_ID" 
			not-null="true"
			insert="true"
			update="true"
			foreign-key="FK_DIST_OBJ_DIST_PREF"
		/>
		
		<many-to-one 
			name="prefGroup" 
			class="PreferenceGroup" 
			column="PREF_GROUP_ID" 
			not-null="true"
			insert="true"
			update="true"
			lazy="false"
		/>

		<property
			name="sequenceNumber"
			column="SEQUENCE_NUMBER"
			type="java.lang.Integer"
			not-null="false"
			length="2"
		/>

	</class>
</hibernate-mapping>
