<hibernate-mapping package="org.unitime.timetable.model">
	<class
		name="History"
		table="HISTORY">
		
 		<cache include="non-lazy" usage="nonstrict-read-write"/>
 		
        <id
            name="uniqueId"
            column="UNIQUEID"
            type="java.lang.Long"
        >
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">HISTORY_SEQ</param>
            </generator>
        </id>
        
        <discriminator column="subclass"
			type="java.lang.String"
			not-null="true"
			length="10"
        />
		
		<property
			name="oldValue"
			column="OLD_VALUE"
			type="java.lang.String"
			not-null="true"
			length="20"
		/>
		
		<property
			name="newValue"
			column="NEW_VALUE"
			type="java.lang.String"
			not-null="true"
			length="20"
		/>

		<property
			name="sessionId"
			column="SESSION_ID"
			type="java.lang.Long"
			not-null="true"
			insert="false"
			update="false"
			length="20"
		/>

		<many-to-one 
			name="session" 
			class="Session" 
			column="SESSION_ID" 
			insert="false" 
			update="false"
			foreign-key="FK_HISTORY_SESSION"
		/>
		
		<subclass name="SubjectHistory"
			discriminator-value="Subject">
		</subclass>
		
		<subclass name="CourseHistory"
			discriminator-value="Course">
			
				<property
					name="oldNumber"
					column="OLD_NUMBER"
					type="java.lang.String"
					not-null="false"
					length="4"
				/>
				
				<property
					name="newNumber"
					column="NEW_NUMBER"
					type="java.lang.String"
					not-null="false"
					length="4"
				/>
				
		</subclass>
		
		<subclass name="AcademicAreaHistory"
			discriminator-value="AcadArea">
		</subclass>
		
		<subclass name="BuildingAbbreviationHistory"
			discriminator-value="Building">
		</subclass>
		
	</class>	
</hibernate-mapping>