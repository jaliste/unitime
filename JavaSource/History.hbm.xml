<hibernate-mapping package="org.unitime.timetable.model">
    <class name="History" table="history">
        <cache include="non-lazy" usage="nonstrict-read-write"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">history_seq</param>
            </generator>
        </id>

        <discriminator
            column="subclass"
            type="java.lang.String"
            not-null="true"
            length="10"/>

        <property
            name="oldValue"
            column="old_value"
            type="java.lang.String"
            not-null="true"
            length="20"/>

        <property
            name="newValue"
            column="new_value"
            type="java.lang.String"
            not-null="true"
            length="20"/>

        <property
            name="sessionId"
            column="session_id"
            type="java.lang.Long"
            not-null="true"
            insert="false"
            update="false"
            length="20"/>

        <many-to-one
            name="session"
            class="Session"
            column="session_id"
            insert="false"
            update="false"
            foreign-key="fk_history_session"/>

        <subclass name="SubjectHistory" discriminator-value="Subject"/>
        <subclass name="CourseHistory" discriminator-value="Course">
            <property
                name="oldNumber"
                column="old_number"
                type="java.lang.String"
                not-null="false"
                length="4"/>

            <property
                name="newNumber"
                column="new_number"
                type="java.lang.String"
                not-null="false"
                length="4"/>

        </subclass>
        <subclass name="AcademicAreaHistory" discriminator-value="AcadArea"/>
        <subclass name="BuildingAbbreviationHistory" discriminator-value="Building"/>
    </class>
</hibernate-mapping>
