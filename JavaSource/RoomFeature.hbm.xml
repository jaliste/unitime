<hibernate-mapping package="org.unitime.timetable.model">
	<class
		name="RoomFeature"
		table="ROOM_FEATURE"
		lazy="true"
		>
		
 		<cache include="non-lazy" usage="nonstrict-read-write"/>

        <id
            name="uniqueId"
            column="UNIQUEID"
            type="java.lang.Long"
        >
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">ROOM_FEATURE_SEQ</param>
            </generator>
        </id>
		
		<discriminator
			column="DISCRIMINATOR"
			type="java.lang.String"
			not-null="true"
			length="10"
		/>
		
		<property
			name="label"
			column="LABEL"
			type="java.lang.String"
			not-null="true"
			length="20"
		/>
		
		<property
			name="abbv"
			column="ABBV"
			type="java.lang.String"
			not-null="false"
			length="20"
		/>

		<set name="rooms" table="ROOM_JOIN_ROOM_FEATURE" inverse="true">
			<cache include="non-lazy" usage="read-write"/>
			<key column="FEATURE_ID"/> 
			<many-to-many class="Location" 
				column="ROOM_ID" 
				/>
		</set>
		

	<subclass
		name="GlobalRoomFeature"
		extends="RoomFeature"
		discriminator-value="global"
		>
		<property 
			name="sisReference"
			column="SIS_REFERENCE"
			type="java.lang.String" 
			not-null="false" 
			length="20"
		/>
		<property 
			name="sisValue"
			column="SIS_VALUE"
			type="java.lang.String" 
			not-null="false" 
			length="20"
		/>
	</subclass>	

	<subclass
		name="DepartmentRoomFeature"
		extends="RoomFeature"
		discriminator-value="department"
		>
		<many-to-one 
			name="department" 
			class="Department" 
			column="DEPARTMENT_ID" 
			not-null="true"
			lazy="false"
			foreign-key="FK_ROOM_FEATURE_DEPT"
		/>
	</subclass>		
		
	</class>	
</hibernate-mapping>
