<hibernate-mapping package="org.unitime.timetable.model">
	<class
		name="PosMajor"
		table="POS_MAJOR"
		mutable="false">

 		<cache include="non-lazy" usage="nonstrict-read-write"/>

        <id
            name="uniqueId"
            column="UNIQUEID"
            type="java.lang.Long"
        >
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">POS_MAJOR_SEQ</param>
            </generator>
        </id>


		<property
			name="externalUniqueId"
			column="EXTERNAL_UID"
			type="java.lang.String"
			not-null="false"
			length="40"
		/>

		<property
			name="code"
			column="CODE"
			type="java.lang.String"
			not-null="true"
			length="10"
		/>

		<property
			name="name"
			column="NAME"
			type="java.lang.String"
			not-null="true"
			length="50"
		/>

		<many-to-one 
			name="session" 
			class="Session" 
			column="SESSION_ID" 
			foreign-key="FK_STUDENT_SESSION"
			not-null="true"
		/>

		<set name="academicAreas" table="POS_ACAD_AREA_MAJOR" inverse="false" lazy="true">
			<cache include="non-lazy" usage="read-write"/>
			<key column="MAJOR_ID"/> 
			<many-to-many class="org.unitime.timetable.model.AcademicArea" 
				column="ACADEMIC_AREA_ID" 
				foreign-key="FK_ACAD_AREA_MAJOR_AREA"
				/>
		</set>
	</class>
</hibernate-mapping>