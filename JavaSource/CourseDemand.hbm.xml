<hibernate-mapping package="org.unitime.timetable.model">

	<class name="CourseDemand" table="COURSE_DEMAND">
		
 		<cache include="non-lazy" usage="nonstrict-read-write"/>
 		
        <id name="uniqueId" column="UNIQUEID" type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">PREF_GROUP_SEQ</param>
            </generator>
        </id>
        
		<many-to-one 
			name="student" 
			class="Student" 
			column="STUDENT_ID" 
			foreign-key="FK_COURSE_DEMAND_STUDENT"
			not-null="true"
		/>
		
		<property
			name="priority"
			column="PRIORITY"
			type="java.lang.Integer"
			not-null="true"
			length="10"
		/>

		<property
			name="waitlist"
			column="WAITLIST"
			type="java.lang.Boolean"
			not-null="true"
		/>

		<property
			name="alternative"
			column="IS_ALTERNATIVE"
			type="java.lang.Boolean"
			not-null="true"
		/>

		<property
			name="timestamp"
			column="TIMESTAMP"
			type="java.util.Date"
			not-null="true"
		/>

		<many-to-one 
			name="freeTime" 
			class="FreeTime" 
			column="FREE_TIME_ID" 
			foreign-key="FK_COURSE_DEMAND_FREE_TIME"
			not-null="false"
		/>

		<set name="courseRequests" table="COURSE_REQUEST" inverse="true" cascade="all">
	 		<cache include="non-lazy" usage="read-write"/>
			<key column="COURSE_DEMAND_ID" foreign-key="FK_COURSE_REQUEST_DEMAND"/>
			<one-to-many class="CourseRequest"/>
		</set>

		<set name="enrollmentMessages" table="STUDENT_ENRL_MSG" inverse="true" cascade="all">
	 		<cache include="non-lazy" usage="read-write"/>
			<key column="COURSE_DEMAND_ID" foreign-key="FK_STUDENT_ENRL_MSG_DEMAND"/>
			<one-to-many class="StudentEnrollmentMessage"/>
		</set>

    </class>
    
</hibernate-mapping>
