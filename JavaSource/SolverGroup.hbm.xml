<hibernate-mapping package="org.unitime.timetable.model">
	<class name="SolverGroup" table="SOLVER_GROUP">
		
 		<cache include="non-lazy" usage="read-write"/>

        <id name="uniqueId" column="UNIQUEID" type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">SOLVER_GROUP_SEQ</param>
            </generator>
        </id>
        
		<property
			name="name"
			column="NAME"
			type="string"
			not-null="true"
			length="50"
		/>
		
		<property
			name="abbv"
			column="ABBV"
			type="string"
			not-null="true"
			length="10"
		/>

		<many-to-one 
			name="session" 
			class="Session" 
			column="SESSION_ID" 
			not-null="true"
			foreign-key="FK_SOLVER_GROUP_SESSION"
		/>

		<set name="timetableManagers" table="SOLVER_GR_TO_TT_MGR" >
	 		<cache include="non-lazy" usage="read-write"/>
			<key column="SOLVER_GROUP_ID"/>			
			<many-to-many 
				class="TimetableManager" 
				column="TIMETABLE_MGR_ID" 
				foreign-key="FK_SOLVER_GR_TO_TT_MGR_TTMGR"/>
		</set>	

		<set name="departments" table="DEPARTMENT" 
			cascade="none"
			lazy="true"
			inverse="true"
			>
			<key column="SOLVER_GROUP_ID"/>		
			<one-to-many class="Department" />
		</set>
		
		<set name="solutions" table="SOLUTION"
			inverse="true"
			lazy="true"
			cascade="all-delete-orphan" >
			<cache include="non-lazy" usage="read-write"/>
			<key column="OWNER_ID"/>
			<one-to-many class="Solution"/>
		</set>
	</class>	
</hibernate-mapping>