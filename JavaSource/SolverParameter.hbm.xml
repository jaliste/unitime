<hibernate-mapping package="org.unitime.timetable.model">
	<class
		name="SolverParameter"
		table="SOLVER_PARAMETER">
		
 		<cache include="non-lazy" usage="read-write"/>

        <id
            name="uniqueId"
            column="UNIQUEID"
            type="java.lang.Long"
        >
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">SOLVER_PARAMETER_SEQ</param>
            </generator>
        </id>
		
		<property
			name="value"
			column="VALUE"
			type="java.lang.String"
			not-null="false"
			length="2048"
		/>

		<many-to-one 
			name="definition" 
			class="SolverParameterDef" 
			column="SOLVER_PARAM_DEF_ID" 
			not-null="true" 
			foreign-key="FK_SOLVER_PARAM_DEF"
			/>
	</class>	
</hibernate-mapping>