<hibernate-mapping package="org.unitime.timetable.model">
	<class
		name="Assignment"
		table="ASSIGNMENT">
		
		<cache include="non-lazy" usage="read-write"/>

        <id
            name="uniqueId"
            column="UNIQUEID"
            type="java.lang.Long"
        >
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">ASSIGNMENT_SEQ</param>
            </generator>
        </id>
		
		<property
			name="days"
			column="DAYS"
			type="java.lang.Integer"
			not-null="false"
			length="4"
		/>

		<property
			name="startSlot"
			column="SLOT"
			type="java.lang.Integer"
			not-null="false"
			length="4"
		/>
		
		<property
			name="classId"
			column="CLASS_ID"
			type="java.lang.Long"
			not-null="false"
			insert="false"
			update="false"
		/>
		
		<property
			name="className"
			column="CLASS_NAME"
			type="java.lang.String"
			not-null="false"
			length="100"
		/>

		<many-to-one 
			name="timePattern" 
			class="TimePattern" 
			column="TIME_PATTERN_ID" 
			not-null="true"
			foreign-key="FK_ASSIGNMENT_TIME_PATTERN"
		/>
		
		<many-to-one 
			name="solution" 
			class="Solution" 
			column="SOLUTION_ID" 
			not-null="true"
			foreign-key="FK_ASSIGNMENT_SOLUTION"
		/>		

		<set
			name="instructors"
			lazy="true" 
			table="ASSIGNED_INSTRUCTORS"
			>
			<cache include="non-lazy" usage="read-write"/>
			<key column="ASSIGNMENT_ID"/>
			<many-to-many 
				class="DepartmentalInstructor"
				column="INSTRUCTOR_ID"
				foreign-key="FK_ASSIGNED_INSTRUCTOR"
			/>
		</set>

		<set
			name="rooms"
			lazy="true" 
			table="ASSIGNED_ROOMS"
			>
			<cache include="non-lazy" usage="read-write"/>
			<key column="ASSIGNMENT_ID"/>
			<many-to-many 
				class="Location"
				column="ROOM_ID"
			/>
		</set>

		<many-to-one 
			name="clazz" 
			class="Class_"
			column="CLASS_ID" 
			lazy="proxy"
			not-null="true"
			foreign-key="FK_ASSIGNMENT_CLASS"
		/>

		<set
			name="assignmentInfo"
			inverse="true"
			cascade="all"
			lazy="true" 
			table="SOLVER_INFO"
			>
			<cache include="non-lazy" usage="read-write"/>
			<key column="ASSIGNMENT_ID"/>
			<one-to-many class="AssignmentInfo"/>
		</set>

		<set
			name="constraintInfo"
			inverse="true"
			lazy="true" 
			cascade="delete-orphan"
			table="CONSTRAINT_INFO"
			>
			<cache include="non-lazy" usage="read-write"/>
			<key column="ASSIGNMENT_ID"/>
			<many-to-many 
				class="ConstraintInfo"
				column="SOLVER_INFO_ID"
				foreign-key="FK_CONSTRAINT_INFO_SOLVER"
			/>
		</set>
		
		<many-to-one 
			name="event" 
			class="Event"
			column="EVENT_ID" 
			lazy="proxy"
			not-null="false"
			foreign-key="FK_ASSIGNMENT_EVENT"
		/>
	</class>
</hibernate-mapping>