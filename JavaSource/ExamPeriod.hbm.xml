<hibernate-mapping package="org.unitime.timetable.model">
	<class
		name="ExamPeriod"
		table="EXAM_PERIOD"
		>

 		<cache include="non-lazy" usage="read-write"/>

		<id 
            name="uniqueId"
            column="UNIQUEID" 
            type="java.lang.Long">            
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
				<param name="sequence">PREF_GROUP_SEQ</param>
			</generator>
            
        </id>
        
		<many-to-one 
			name="session" 
			class="Session" 
			column="SESSION_ID" 
			foreign-key="FK_EXAM_PERIOD_SESSION"
			 />
        

		<property
			name="dateOffset"
			column="DATE_OFS"
			type="java.lang.Integer"
			length="10"
			not-null="true"
		/>

		<property
			name="startSlot"
			column="START_SLOT"
			type="java.lang.Integer"
			length="10"
			not-null="true"
		/>

		<property
			name="length"
			column="LENGTH"
			type="java.lang.Integer"
			length="10"
			not-null="true"
		/>

		<many-to-one name="prefLevel"
			class="PreferenceLevel"
			column="PREF_LEVEL_ID"
			not-null="true"
			/>
	</class>	
</hibernate-mapping>