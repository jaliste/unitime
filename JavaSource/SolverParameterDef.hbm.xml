<hibernate-mapping package="org.unitime.timetable.model">
    <class name="SolverParameterDef" table="solver_parameter_def">
        <cache include="non-lazy" usage="read-write"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">solver_parameter_def_seq</param>
            </generator>
        </id>

        <property
            name="name"
            column="name"
            type="java.lang.String"
            not-null="false"
            length="100"/>

        <property
            name="default"
            column="default_value"
            type="java.lang.String"
            not-null="false"
            length="2048"/>

        <property
            name="description"
            column="description"
            type="java.lang.String"
            not-null="false"
            length="1000"/>

        <property
            name="type"
            column="type"
            type="java.lang.String"
            not-null="false"
            length="250"/>

        <property
            name="order"
            column="ord"
            type="java.lang.Integer"
            not-null="false"
            length="4"/>

        <property
            name="visible"
            column="visible"
            type="java.lang.Boolean"
            not-null="false"/>

        <many-to-one
            name="group"
            class="SolverParameterGroup"
            column="solver_param_group_id"
            not-null="true"
            foreign-key="fk_solver_param_def_gr"/>

    </class>
</hibernate-mapping>
