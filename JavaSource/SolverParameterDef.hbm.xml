<hibernate-mapping package="org.unitime.timetable.model">
	<class
		name="SolverParameterDef"
		table="SOLVER_PARAMETER_DEF">
		
 		<cache include="non-lazy" usage="read-write"/>

        <id
            name="uniqueId"
            column="UNIQUEID"
            type="java.lang.Long"
        >
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">SOLVER_PARAMETER_DEF_SEQ</param>
            </generator>
        </id>
		
		<property
			name="name"
			column="NAME"
			type="java.lang.String"
			not-null="false"
			length="100"
		/>
		
		<property
			name="default"
			column="DEFAULT_VALUE"
			type="java.lang.String"
			not-null="false"
			length="2048"
		/>

		<property
			name="description"
			column="DESCRIPTION"
			type="java.lang.String"
			not-null="false"
			length="1000"
		/>
							
		<property
			name="type"
			column="TYPE"
			type="java.lang.String"
			not-null="false"
			length="250"
		/>

		<property
			name="order"
			column="ORD"
			type="java.lang.Integer"
			not-null="false"
			length="4"
		/>

		<property
			name="visible"
			column="VISIBLE"
			type="java.lang.Boolean"
			not-null="false"
		/>

		<many-to-one 
			name="group" 
			class="SolverParameterGroup" 
			column="SOLVER_PARAM_GROUP_ID" 
			not-null="true" 
			foreign-key="FK_SOLVER_PARAM_DEF_GR"
			/>

	</class>	
</hibernate-mapping>
