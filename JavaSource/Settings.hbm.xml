<hibernate-mapping package="org.unitime.timetable.model">
	<class
		name="Settings"
		table="SETTINGS"
		>

 		<cache include="non-lazy" usage="read-write"/>

		<id 
            name="uniqueId"
            column="UNIQUEID" 
            type="java.lang.Long">            
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
				<param name="sequence">SETTINGS_SEQ</param>
			</generator>
            
        </id>

		<property
			name="key"
			column="NAME"
			type="java.lang.String"
			length="30"
			not-null="true"
		/>

		<property
			name="defaultValue"
			column="DEFAULT_VALUE"
			type="java.lang.String"
			length="100"
			not-null="true"
		/>

		<property
			name="allowedValues"
			column="ALLOWED_VALUES"
			type="java.lang.String"
			length="500"
			not-null="true"
		/>

		<property
			name="description"
			column="DESCRIPTION"
			type="java.lang.String"
			length="100"
			not-null="true"
		/>

		<set name="managerSettings" table="MANAGER_SETTINGS">
	 		<cache include="non-lazy" usage="nonstrict-read-write"/>
			<key column="UNIQUEID" />
			<one-to-many class="ManagerSettings" />
		</set>

	</class>	
</hibernate-mapping>
