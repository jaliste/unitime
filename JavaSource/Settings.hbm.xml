<hibernate-mapping package="org.unitime.timetable.model">
    <class name="Settings" table="settings">
        <cache include="non-lazy" usage="read-write"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">settings_seq</param>
            </generator>
        </id>

        <property
            name="key"
            column="name"
            type="java.lang.String"
            length="30"
            not-null="true"/>

        <property
            name="defaultValue"
            column="default_value"
            type="java.lang.String"
            length="100"
            not-null="true"/>

        <property
            name="allowedValues"
            column="allowed_values"
            type="java.lang.String"
            length="500"
            not-null="true"/>

        <property
            name="description"
            column="description"
            type="java.lang.String"
            length="100"
            not-null="true"/>

        <set name="managerSettings" table="manager_settings">
            <cache include="non-lazy" usage="nonstrict-read-write"/>
            <key column="uniqueid"/>
            <one-to-many class="ManagerSettings"/>
        </set>
    </class>
</hibernate-mapping>
