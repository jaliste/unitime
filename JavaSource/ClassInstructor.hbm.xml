<hibernate-mapping package="org.unitime.timetable.model">
	<class
		name="ClassInstructor"
		table="CLASS_INSTRUCTOR">
		
		<cache include="non-lazy" usage="read-write"/>

        <id
            name="uniqueId"
            column="UNIQUEID"
            type="java.lang.Long"
			length="20"
        >
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">CLASS_INSTRUCTOR_SEQ</param>
            </generator>
        </id>
				
		<property
			name="percentShare"
			column="PERCENT_SHARE"
			type="java.lang.Integer"
			not-null="true"
			length="3"
		/>
		
		<property
		    name="lead"
		    type="java.lang.Boolean"
		    column="IS_LEAD"
		    not-null="true"
		/>		
				
		<many-to-one 
			name="classInstructing" 
			class="Class_" 
			column="CLASS_ID" 
			not-null="true"
			insert="true"
			update="true"
			foreign-key="FK_CLASS_INSTR_CLASS_"
		/>

		<many-to-one 
			name="instructor" 
			class="DepartmentalInstructor"
			column="INSTRUCTOR_ID" 
			not-null="true"
			insert="true"
			update="true"
			foreign-key="FK_CLASS_INSTR_INSTR"
		/>	
				
	</class>	
</hibernate-mapping>
