<hibernate-mapping package="org.unitime.timetable.model">
    <class name="EventNote" table="event_note">
        <cache include="non-lazy" usage="read-write"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">pref_group_seq</param>
            </generator>
        </id>

        <many-to-one
            name="event"
            class="Event"
            column="event_id"
            foreign-key="fk_event_note_event"
            not-null="true"/>

        <property
            name="noteType"
            column="note_type"
            type="java.lang.Integer"
            length="10"
            not-null="true"/>

        <property
            name="textNote"
            column="text_note"
            type="java.lang.String"
            length="1000"
            not-null="false"/>

        <property
            name="timeStamp"
            column="time_stamp"
            type="java.util.Date"
            not-null="true"/>

        <property
            name="user"
            column="uname"
            type="java.lang.String"
            length="100"
            not-null="false"/>

        <property
            name="meetings"
            column="meetings"
            type="java.lang.String"
            length="2000"
            not-null="false"/>

    </class>
</hibernate-mapping>
