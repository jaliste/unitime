<hibernate-mapping package="org.unitime.timetable.model">
	<class
		name="EventNote"
		table="EVENT_NOTE"
		>

 		<cache include="non-lazy" usage="read-write"/>

		<id 
            name="uniqueId"
            column="UNIQUEID" 
            type="java.lang.Long">            
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
				<param name="sequence">PREF_GROUP_SEQ</param>
			</generator>
            
        </id>
        
		<many-to-one 
			name="event" 
			class="Event" 
			column="EVENT_ID" 
			foreign-key="fk_event_note_event"
			not-null="true"
		/>
        
		<many-to-one 
			name="standardNote" 
			class="StandardEventNote" 
			column="NOTE_ID" 
			foreign-key="fk_event_note_std_note"
			not-null="false"
		/>

		<property
			name="textNote"
			column="TEXT_NOTE"
			type="java.lang.String"
			length="1000"
			not-null="false"
		/>

	</class>	
</hibernate-mapping>
