<hibernate-mapping package="org.unitime.timetable.model">
    <class name="SubjectArea" table="subject_area">
        <cache include="non-lazy" usage="read-write"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">subject_area_seq</param>
            </generator>
        </id>

        <property
            name="externalUniqueId"
            column="external_uid"
            type="java.lang.String"
            not-null="false"
            length="40"/>

        <property
            name="subjectAreaAbbreviation"
            column="subject_area_abbreviation"
            type="java.lang.String"
            not-null="true"
            length="10"/>

        <property
            name="shortTitle"
            column="short_title"
            type="java.lang.String"
            not-null="true"
            length="50"/>

        <property
            name="longTitle"
            column="long_title"
            type="java.lang.String"
            not-null="true"
            length="100"/>

        <property
            name="scheduleBookOnly"
            column="schedule_book_only"
            type="java.lang.Boolean"
            not-null="true"/>

        <property
            name="pseudoSubjectArea"
            column="pseudo_subject_area"
            type="java.lang.Boolean"
            not-null="true"/>

        <many-to-one
            name="session"
            class="Session"
            column="session_id"
            not-null="true"/>

        <many-to-one
            name="department"
            class="Department"
            column="department_uniqueid"
            not-null="true"
            foreign-key="fk_subject_area_dept"/>

        <set
            name="courseOfferings"
            inverse="true"
            cascade="all-delete-orphan">
            <cache include="non-lazy" usage="read-write"/>
            <key column="subject_area_id"/>
            <one-to-many class="CourseOffering"/>
        </set>

        <set
            name="instructionalOfferings"
            table="course_offering"
            inverse="true"
            cascade="all-delete-orphan">

            <cache include="non-lazy" usage="read-write"/>
            <key column="subject_area_id"/>
            <many-to-many
                column="instr_offr_id"
                class="InstructionalOffering"
                foreign-key="fk_crs_offr_instr_offr"
                unique="true"/>

        </set>

        <set
            name="designatorInstructors"
            cascade="all"
            lazy="true"
            inverse="true"
            table="designator">

            <cache include="non-lazy" usage="read-write"/>
            <key column="subject_area_id"/>
            <one-to-many class="Designator"/>
        </set>

    </class>
</hibernate-mapping>
