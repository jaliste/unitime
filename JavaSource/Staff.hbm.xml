<hibernate-mapping package="org.unitime.timetable.model">

	<class
		name="Staff"
		table="STAFF">
		
 		<cache include="non-lazy" usage="read-write"/>
 		
        <id
            name="uniqueId"
            column="UNIQUEID"
            type="java.lang.Long"
        >
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">STAFF_SEQ</param>
            </generator>
        </id>
        
		<property
			name="externalUniqueId"
			column="EXTERNAL_UID"
			type="java.lang.String"
			not-null="false"
			length="40"
		/>

		<property
			name="firstName"
			column="FNAME"
			type="java.lang.String"
			not-null="false"
			length="50"
		/>

		<property
			name="middleName"
			column="MNAME"
			type="java.lang.String"
			not-null="false"
			length="50"
		/>

		<property
			name="lastName"
			column="LNAME"
			type="java.lang.String"
			not-null="true"
			length="100"
		/>

		<property
			name="dept"
			column="DEPT"
			type="java.lang.String"
			not-null="false"
			length="50"
		/>

		<property
			name="email"
			column="EMAIL"
			type="java.lang.String"
			not-null="false"
			length="200"
		/>

		<many-to-one 
			name="positionCode" 
			class="PositionCodeType"
			column="POS_CODE"			
			not-found="ignore"
		/>
		
	</class >	
		
</hibernate-mapping>