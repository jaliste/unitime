<hibernate-mapping package="org.unitime.timetable.model">
    <class name="RelatedCourseInfo" table="related_course_info">
        <cache include="non-lazy" usage="read-write"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">pref_group_seq</param>
            </generator>
        </id>

        <many-to-one
            name="event"
            class="CourseEvent"
            column="event_id"
            foreign-key="fk_event_owner_event"
            not-null="true"/>

        <property
            name="ownerId"
            column="owner_id"
            type="java.lang.Long"
            length="20"
            not-null="true"/>

        <property
            name="ownerType"
            column="owner_type"
            type="java.lang.Integer"
            length="10"
            not-null="true"/>

        <many-to-one
            name="course"
            class="CourseOffering"
            column="course_id"
            foreign-key="fk_exam_owner_course"
            not-null="true"/>

    </class>
</hibernate-mapping>
