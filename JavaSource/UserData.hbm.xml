<hibernate-mapping package="org.unitime.timetable.model">
	<class
		name="UserData"
		table="USER_DATA"
		>

 		<cache include="non-lazy" usage="read-write"/>

		<composite-id>
        	<key-property name="externalUniqueId" column="EXTERNAL_UID" type="java.lang.String" length="12"/>
	        <key-property name="name" column="NAME" type="java.lang.String" length="100"/>
		</composite-id>

		<property
			name="value"
			column="VALUE"
			type="java.lang.String"
			length="2048"
			not-null="true"
		/>
	</class>	
</hibernate-mapping>