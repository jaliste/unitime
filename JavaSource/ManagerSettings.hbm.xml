<hibernate-mapping package="org.unitime.timetable.model">
	<class
		name="ManagerSettings"
		table="MANAGER_SETTINGS"
		>

 		<cache include="non-lazy" usage="read-write"/>

		<id 
            name="uniqueId"
            column="UNIQUEID" 
            type="java.lang.Long">            
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
				<param name="sequence">USER_SETTINGS_SEQ</param>
			</generator>
            
        </id>

		<many-to-one 
			name="key"
			class="Settings"
			column="KEY_ID"
			not-null="true"
			insert="true"
			update="true" 
			foreign-key="FK_MANAGER_SETTINGS_KEY"
		/>

		<property
			name="value"
			column="VALUE"
			type="java.lang.String"
			length="100"
			not-null="true"
		/>

		<many-to-one 
			name="manager"
			class="TimetableManager"
			column="USER_UNIQUEID"
			not-null="true"
			insert="true"
			update="true"
			foreign-key="FK_MANAGER_SETTINGS_USER"
		/>
			
	</class>	
</hibernate-mapping>