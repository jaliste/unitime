<hibernate-mapping package="org.unitime.timetable.model">
	<class
		name="Event"
		abstract="false"
		table="EVENT">

		<cache include="non-lazy" usage="read-write"/>

		<id 
            name="uniqueId"
            column="UNIQUEID" 
            type="java.lang.Long">            
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
				<param name="sequence">PREF_GROUP_SEQ</param>
			</generator>
            
        </id>
        
		<many-to-one 
			name="eventType" 
			class="EventType" 
			column="EVENT_TYPE" 
			foreign-key="fk_event_event_type"
			not-null="true"
		/>
        
		<property
			name="eventName"
			column="EVENT_NAME"
			type="java.lang.String"
			length="100"
			not-null="false"
		/>
 		<property
			name="minCapacity"
			column="MIN_CAPACITY"
			type="java.lang.Integer"
			not-null="true"
			length="10"
		/>

 		<property
			name="maxCapacity"
			column="MAX_CAPACITY"
			type="java.lang.Integer"
			not-null="true"
			length="10"
		/>

		<many-to-one 
			name="mainContact" 
			class="EventContact" 
			column="main_contact_id" 
			foreign-key="fk_event_main_contact"
			not-null="false"
		/>

		<set name="additionalContacts"
			table="event_join_event_contact"
			inverse="false" >
	 		<cache include="non-lazy" usage="nonstrict-read-write"/>	 		
			<key column="event_id"/>			
			<many-to-many 
				class="EventContact" 
				column="event_contact_id" 
				/>
		</set>
		
		<set
			name="notes"
			inverse="true"
			lazy="true"
			cascade="all-delete-orphan"
			order-by="UNIQUEID"
			>
			<cache include="non-lazy" usage="read-write"/>
			<key column="EVENT_ID"/>
			<one-to-many class="EventNote"/>
		</set>

		<set
			name="relatedCourses"
			lazy="true"
			cascade="all-delete-orphan" 
			inverse="true"
			>
			<cache include="non-lazy" usage="read-write"/>
			<key column="EVENT_ID" foreign-key="fk_event_owner_event"/>
			<one-to-many class="RelatedCourseInfo"/>
		</set>			
			
		<set
			name="meetings"
			lazy="true"
			cascade="all-delete-orphan" 
			inverse="true"
			>
			<cache include="non-lazy" usage="read-write"/>
			<key column="EVENT_ID" foreign-key="fk_meeting_event"/>
			<one-to-many class="Meeting"/>
		</set>			
			
		
	</class>
</hibernate-mapping>