<hibernate-mapping package="org.unitime.timetable.model">
	<class
		name="CourseSubpartCredit"
		table="COURSE_SUBPART_CREDIT">

 		<cache include="non-lazy" usage="nonstrict-read-write"/>

        <id
            name="uniqueId"
            column="UNIQUEID"
            type="java.lang.Long"
        >
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">PREF_GROUP_SEQ</param>
            </generator>
        </id>
        
		<property
			name="subpartId"
			column="SUBPART_ID"
			type="java.lang.String"
			not-null="true"
			length="10"
		/>

		<property
			name="creditType"
			column="CREDIT_TYPE"
			type="java.lang.String"
			not-null="true"
			length="20"
		/>

		<property
			name="creditUnitType"
			column="CREDIT_UNIT_TYPE"
			type="java.lang.String"
			not-null="true"
			length="20"
		/>

		<property
			name="creditFormat"
			column="CREDIT_FORMAT"
			type="java.lang.String"
			not-null="true"
			length="20"
		/>
		
		<property
			name="fixedMinimumCredit"
			column="FIXED_MIN_CREDIT"
			type="java.lang.Float"
			not-null="true"
			length="10"
		/>
		
		<property
			name="maximumCredit"
			column="MAX_CREDIT"
			type="java.lang.Float"
			not-null="false"
			length="10"
		/>

		<property
			name="fractionalCreditAllowed"
			column="FRAC_CREDIT_ALLOWED"
			type="java.lang.Boolean"
			not-null="false"
		length="10"
		/>
		
		<many-to-one
			name="courseCatalog"
			class="CourseCatalog"
			column="COURSE_CATALOG_ID"
			insert="true"
			update="false"
			not-null="true"
			foreign-key="FK_SUBPART_CRED_CRS"
		/>

	</class>
</hibernate-mapping>