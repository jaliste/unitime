<hibernate-mapping package="org.unitime.timetable.model">

	<class
		name="PositionCodeType"
		table="POSITION_CODE_TO_TYPE">
		
 		<cache include="non-lazy" usage="read-only"/>
 		
        <id
            name="positionCode"
            column="POSITION_CODE"
            type="java.lang.String"
			length="5"
        />
        
        <many-to-one
        	name="positionType"
        	column="POS_CODE_TYPE"
        	class="PositionType"
        	foreign-key="FK_POS_MAP_TYPE"
        />
        
		<set name="staff"
			lazy="true"
			table="STAFF" >
			 <cache include="non-lazy" usage="read-only"/>
			 <key column="POS_CODE"/>			
			 <one-to-many class="Staff" />
		</set>
		
	</class >	
		
</hibernate-mapping>