<hibernate-mapping package="org.unitime.timetable.model">
	<class
		name="ApplicationConfig"
		table="APPLICATION_CONFIG"
		>

		<id 
            name="key"
            column="NAME" 
			type="java.lang.String"
			length="1000"
        />
        
		<property
			name="value"
			column="VALUE"
			type="java.lang.String"
			length="4000"
			not-null="false"
		/>

		<property
			name="description"
			column="DESCRIPTION"
			type="java.lang.String"
			length="100"
			not-null="false"
		/>

	</class>	
</hibernate-mapping>
