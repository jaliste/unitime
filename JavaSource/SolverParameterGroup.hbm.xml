<hibernate-mapping package="org.unitime.timetable.model">
	<class
		name="SolverParameterGroup"
		table="SOLVER_PARAMETER_GROUP">
		
 		<cache include="non-lazy" usage="read-write"/>

        <id
            name="uniqueId"
            column="UNIQUEID"
            type="java.lang.Long"
        >
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">SOLVER_PARAMETER_GROUP_SEQ</param>
            </generator>
        </id>
		
		<property
			name="name"
			column="NAME"
			type="java.lang.String"
			not-null="false"
			length="100"
		/>
		
		<property
			name="description"
			column="DESCRIPTION"
			type="java.lang.String"
			not-null="false"
			length="1000"
		/>
							
		<property
			name="condition"
			column="CONDITION"
			type="java.lang.String"
			not-null="false"
			length="250"
		/>

		<property
			name="order"
			column="ORD"
			type="java.lang.Integer"
			not-null="false"
			length="4"
		/>
		
		<set
			name="parameters"
			inverse="true"
			lazy="true"
			cascade="all"
			table="SOLVER_PARAMETER_DEF" 
			>
	 		<cache include="non-lazy" usage="read-write"/>
			<key column="SOLVER_PARAM_GROUP_ID"/>
			<one-to-many class="SolverParameterDef" />
		</set>
		
	</class>	
</hibernate-mapping>