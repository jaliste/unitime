<hibernate-mapping package="org.unitime.timetable.model">
    <class name="SolverParameterGroup" table="solver_parameter_group">
        <cache include="non-lazy" usage="read-write"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">solver_parameter_group_seq</param>
            </generator>
        </id>

        <property
            name="name"
            column="name"
            type="java.lang.String"
            not-null="false"
            length="100"/>

        <property
            name="description"
            column="description"
            type="java.lang.String"
            not-null="false"
            length="1000"/>

        <!-- 	
		<property
			name="condition"
			column="CONDITION"
			type="java.lang.String"
			not-null="false"
			length="250"
		/>
		-->
        <property
            name="order"
            column="ord"
            type="java.lang.Integer"
            not-null="false"
            length="4"/>

        <property
            name="type"
            column="param_type"
            type="java.lang.Integer"
            not-null="false"
            length="10"/>

        <set
            name="parameters"
            inverse="true"
            lazy="true"
            cascade="all"
            table="solver_parameter_def">

            <cache include="non-lazy" usage="read-write"/>
            <key column="solver_param_group_id"/>
            <one-to-many class="SolverParameterDef"/>
        </set>

    </class>
</hibernate-mapping>
