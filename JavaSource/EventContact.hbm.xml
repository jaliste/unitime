<hibernate-mapping package="org.unitime.timetable.model">
    <class
        name="EventContact"
        abstract="false"
        table="event_contact">
        <cache include="non-lazy" usage="read-write"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">pref_group_seq</param>
            </generator>
        </id>

        <property
            name="externalUniqueId"
            column="external_id"
            type="string"
            not-null="false"
            length="40"/>

        <property
            name="emailAddress"
            column="email"
            type="string"
            not-null="false"
            length="200"/>

        <property
            name="phone"
            column="phone"
            type="string"
            not-null="false"
            length="35"/>

        <property
            name="firstName"
            column="firstname"
            type="string"
            not-null="false"
            length="100"/>

        <property
            name="middleName"
            column="middlename"
            type="string"
            not-null="false"
            length="100"/>

        <property
            name="lastName"
            column="lastname"
            type="string"
            not-null="false"
            length="100"/>

    </class>

</hibernate-mapping>
