<hibernate-mapping package="org.unitime.timetable.model">
	<class
		name="ChangeLog"
		table="CHANGE_LOG">

 		<cache include="non-lazy" usage="nonstrict-read-write"/>

        <id
            name="uniqueId"
            column="UNIQUEID"
            type="java.lang.Long"
        >
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">PREF_GROUP_SEQ</param>
            </generator>
        </id>
        
		<many-to-one
			name="session"
			class="Session"
			column="SESSION_ID"
			not-null="true"
			foreign-key="FK_CHANGE_LOG_SESSION"
		/>

		<many-to-one 
			name="manager" 
			class="TimetableManager" 
			column="MANAGER_ID" 
			not-null="true"
			foreign-key="FK_CHANGE_LOG_MANAGER"
		/>

		<property
			name="timeStamp"
			column="TIME_STAMP"
			type="java.sql.Timestamp"
			not-null="true"
		/>

        <property
			name="objectType"
			column="OBJ_TYPE"
			type="java.lang.String"
			not-null="true"
			length="255"
		/>

        <property
			name="objectTitle"
			column="OBJ_TITLE"
			type="java.lang.String"
			not-null="true"
			length="255"
		/>

        <property
			name="objectUniqueId"
			column="OBJ_UID"
			type="java.lang.Long"
			not-null="true"
		/>

		<many-to-one 
			name="subjectArea" 
			class="SubjectArea" 
			column="SUBJ_AREA_ID" 
			foreign-key="FK_CHANGE_LOG_SUBJAREA"
		/>

		<many-to-one 
			name="department" 
			class="Department" 
			column="DEPARTMENT_ID" 
			foreign-key="FK_CHANGE_LOG_DEPARTMENT"
		/>

		<property
			name="sourceString"
			column="SOURCE"
			type="java.lang.String"
			not-null="true"
			length="50"
		/>

		<property
			name="operationString"
			column="OPERATION"
			type="java.lang.String"
			not-null="true"
			length="50"
		/>

		<property
			name="detail"
			column="DETAIL"
			type="org.unitime.commons.hibernate.blob.XmlBlobType"
			length="65535"
		/>

	</class>
</hibernate-mapping>
