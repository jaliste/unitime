<hibernate-mapping package="org.unitime.timetable.model">
    <class name="Reservation" abstract="true">
        <cache include="non-lazy" usage="read-write"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">reservation_seq</param>
            </generator>
        </id>

        <property
            name="ownerClassId"
            column="owner_class_id"
            type="java.lang.String"
            not-null="true"
            length="1"/>

        <property
            name="owner"
            column="owner"
            type="java.lang.Long"
            not-null="true"
            length="20"/>

        <property
            name="priority"
            column="priority"
            type="java.lang.Integer"
            not-null="true"
            length="5"/>

        <many-to-one
            name="reservationType"
            class="ReservationType"
            column="reservation_type"
            not-null="true"/>

        <union-subclass
            name="IndividualReservation"
            table="individual_reservation"
            abstract="false">
            <property
                name="externalUniqueId"
                column="external_uid"
                type="java.lang.String"
                not-null="true"
                length="40"/>

            <property
                name="overLimit"
                column="over_limit"
                type="java.lang.Boolean"
                not-null="true"/>

            <property
                name="expirationDate"
                column="expiration_date"
                type="java.sql.Timestamp"
                not-null="true"/>

        </union-subclass>

        <union-subclass name="CharacteristicReservation" abstract="true">
            <property
                name="reserved"
                column="reserved"
                type="java.lang.Integer"
                not-null="true"
                length="10"/>

            <property
                name="requested"
                column="requested"
                type="java.lang.Integer"
                not-null="false"
                length="10"/>

            <property
                name="priorEnrollment"
                column="prior_enrollment"
                type="java.lang.Integer"
                not-null="false"
                length="10"/>

            <property
                name="projectedEnrollment"
                column="projected_enrollment"
                type="java.lang.Integer"
                not-null="false"
                length="10"/>

            <union-subclass
                name="StudentGroupReservation"
                table="student_group_reservation"
                abstract="false">
                <many-to-one
                    name="studentGroup"
                    class="StudentGroup"
                    column="student_group"
                    not-null="true"/>

            </union-subclass>

            <union-subclass
                name="CourseOfferingReservation"
                table="course_reservation"
                abstract="false">
                <many-to-one
                    name="courseOffering"
                    class="CourseOffering"
                    column="course_offering"
                    not-null="true"/>

            </union-subclass>

            <union-subclass name="AcadAreaPosReservation" abstract="true">
                <many-to-one
                    name="academicClassification"
                    class="AcademicClassification"
                    column="acad_classification"
                    not-null="false"/>

                <union-subclass
                    name="AcadAreaReservation"
                    table="acad_area_reservation"
                    abstract="false">
                    <many-to-one
                        name="academicArea"
                        class="AcademicArea"
                        column="acad_area"
                        not-null="true"/>

                </union-subclass>

                <union-subclass
                    name="PosReservation"
                    table="pos_reservation"
                    abstract="false">
                    <many-to-one
                        name="posMajor"
                        class="PosMajor"
                        column="pos_major"
                        not-null="true"/>

                </union-subclass>

            </union-subclass>
        </union-subclass>
    </class>
</hibernate-mapping>
