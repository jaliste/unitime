<hibernate-mapping package="org.unitime.timetable.model">
    <class name="RoomTypeOption" table="room_type_option">
        <cache include="non-lazy" usage="nonstrict-read-write"/>
        <composite-id>
            <key-many-to-one
                name="roomType"
                class="RoomType"
                column="room_type"
                foreign-key="fk_rtype_option_type"/>

            <key-many-to-one
                name="session"
                class="Session"
                column="session_id"
                foreign-key="fk_rtype_option_session"/>

        </composite-id>
        <property
            name="status"
            column="status"
            type="java.lang.Integer"
            not-null="true"
            length="10"/>

        <property
            name="message"
            column="message"
            type="java.lang.String"
            not-null="true"
            length="200"/>

    </class>
</hibernate-mapping>
