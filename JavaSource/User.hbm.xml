<hibernate-mapping package="org.unitime.timetable.model">
	<class
		name="User"
		abstract="false"
		table="USERS">

		<cache include="non-lazy" usage="read-write"/>

		<id 
            name="username"
            column="USERNAME" 
            type="java.lang.String" 
            length="15">            
            <generator class="assigned" />
        </id>
        
		<property
			name="password"
			column="PASSWORD"
			type="string"
			not-null="true"
			length="25"
		/>
		
		<property
			name="externalUniqueId"
			column="EXTERNAL_UID"
			type="string"
			not-null="false"
			length="40"
		/>
		
	</class>
</hibernate-mapping>
