<hibernate-mapping package="org.unitime.timetable.model">
    <class
        name="User"
        abstract="false"
        table="users">
        <cache include="non-lazy" usage="read-write"/>
        <id
            name="username"
            column="username"
            type="java.lang.String"
            length="15">

            <generator class="assigned"/>
        </id>

        <property
            name="password"
            column="password"
            type="string"
            not-null="true"
            length="25"/>

        <property
            name="externalUniqueId"
            column="external_uid"
            type="string"
            not-null="false"
            length="40"/>

    </class>

</hibernate-mapping>
