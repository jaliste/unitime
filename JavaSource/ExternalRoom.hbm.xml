<hibernate-mapping package="org.unitime.timetable.model">
	<class
		name="ExternalRoom"
		table="EXTERNAL_ROOM">
		
 		<cache include="non-lazy" usage="nonstrict-read-write"/>

        <id
            name="uniqueId"
            column="UNIQUEID"
            type="java.lang.Long"
        >
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">PREF_GROUP_SEQ</param>
            </generator>
        </id>
        
		<property
			name="externalUniqueId"
			column="EXTERNAL_UID"
			type="java.lang.String"
			not-null="false"
			length="40"
		/>

		<property
			name="roomNumber"
			column="ROOM_NUMBER"
			type="java.lang.String"
			not-null="true"
			length="10"
		/>
		
		<property
			name="coordinateX"
			column="COORDINATE_X"
			type="java.lang.Integer"
			not-null="false"
			length="5"
		/>
		
		<property
			name="coordinateY"
			column="COORDINATE_Y"
			type="java.lang.Integer"
			not-null="false"
			length="5"
		/>
		
		<property
			name="capacity"
			column="CAPACITY"
			type="java.lang.Integer"
			not-null="true"
			length="6"
		/>

		<property
			name="examCapacity"
			column="EXAM_CAPACITY"
			type="java.lang.Integer"
			not-null="false"
			length="6"
		/>
		
		<property
			name="classification"
			column="CLASSIFICATION"
			type="java.lang.String"
			not-null="true"
			length="20"
		/>
			
		<property
			name="scheduledRoomType"
			column="SCHEDULED_ROOM_TYPE"
			type="java.lang.String"
			not-null="true"
			length="20"
		/>
		
		<property
			name="isInstructional"
			column="INSTRUCTIONAL"
			type="java.lang.Boolean"
			not-null="true"
		/>
			 
		<property
			name="displayName"
			column="DISPLAY_NAME"
			type="java.lang.String"
			not-null="false"
			length="100"
		/>

		<set name="roomDepartments">
	 		<cache include="non-lazy" usage="read-write"/>
			<key column="EXTERNAL_ROOM_ID"/>
			<one-to-many class="ExternalRoomDepartment"/>
		</set>
		
		<set name="roomFeatures">
	 		<cache include="non-lazy" usage="read-write"/>
			<key column="EXTERNAL_ROOM_ID"/>
			<one-to-many class="ExternalRoomFeature"/>
		</set>
		
		<many-to-one
			name="building"
			class="ExternalBuilding"
			column="EXTERNAL_BLDG_ID"
			not-null="true"
			foreign-key="FK_EXT_ROOM_BUILDING"
		/>

	</class>	
</hibernate-mapping>