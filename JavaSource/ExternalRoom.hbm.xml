<hibernate-mapping package="org.unitime.timetable.model">
    <class name="ExternalRoom" table="external_room">
        <cache include="non-lazy" usage="nonstrict-read-write"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">pref_group_seq</param>
            </generator>
        </id>

        <property
            name="externalUniqueId"
            column="external_uid"
            type="java.lang.String"
            not-null="false"
            length="40"/>

        <property
            name="roomNumber"
            column="room_number"
            type="java.lang.String"
            not-null="true"
            length="10"/>

        <property
            name="coordinateX"
            column="coordinate_x"
            type="java.lang.Double"
            not-null="false"/>

        <property
            name="coordinateY"
            column="coordinate_y"
            type="java.lang.Double"
            not-null="false"/>

        <property
            name="capacity"
            column="capacity"
            type="java.lang.Integer"
            not-null="true"
            length="6"/>

        <property
            name="examCapacity"
            column="exam_capacity"
            type="java.lang.Integer"
            not-null="false"
            length="6"/>

        <property
            name="classification"
            column="classification"
            type="java.lang.String"
            not-null="true"
            length="20"/>

        <many-to-one
            name="roomType"
            class="RoomType"
            column="room_type"
            not-null="true"
            foreign-key="fk_external_room_type"/>

        <property
            name="isInstructional"
            column="instructional"
            type="java.lang.Boolean"
            not-null="true"/>

        <property
            name="displayName"
            column="display_name"
            type="java.lang.String"
            not-null="false"
            length="100"/>

        <set name="roomDepartments">
            <cache include="non-lazy" usage="read-write"/>
            <key column="external_room_id"/>
            <one-to-many class="ExternalRoomDepartment"/>
        </set>
        <set name="roomFeatures">
            <cache include="non-lazy" usage="read-write"/>
            <key column="external_room_id"/>
            <one-to-many class="ExternalRoomFeature"/>
        </set>
        <many-to-one
            name="building"
            class="ExternalBuilding"
            column="external_bldg_id"
            not-null="true"
            foreign-key="fk_ext_room_building"/>

    </class>
</hibernate-mapping>
